{
  "name": "taoofcoding-desktop",
  "version": "0.1.0",
  "description": "",
  "main": "./entry.js",
  "homepage": ".",
  "scripts": {
    "start": "webpack serve --hot",
    "build": "webpack --config ./webpack.config.js",
    "serve": "electron  ./entry.js",
    "buildForProd": "webpack --config ./webpack.config.prod.js",
    "packageForLinux": "npm run buildForProd && electron-builder",
    "packageForWin": "del /F /S /Q .\\package\\* && npm run buildForProd &&  electron-builder --win",
    "packageForMac": "rm -rf ./dist/* && rm -rf ./package/* && npm run buildForProd && electron-builder",
    "eslint": "npx eslint  \"src/**/*.tsx\" \"src/**/*.ts\" --fix",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "御剑(lingen.liu@gmail.com)",
  "devDependencies": {
    "@swc/core": "^1.2.168",
    "@tailwindcss/typography": "^0.5.2",
    "@types/prismjs": "^1.26.0",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "autoprefixer": "^10.4.4",
    "axios": "^0.27.2",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.2",
    "css-loader": "^6.7.0",
    "date-fns": "^2.28.0",
    "electron": "^20.1.4",
    "electron-builder": "^23.0.3",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "mobx": "^6.4.2",
    "mobx-react": "^7.3.0",
    "mobx-react-lite": "^3.3.0",
    "node-cache": "^5.1.0",
    "postcss": "^8.4.12",
    "postcss-loader": "^7.0.1",
    "react-markdown": "^8.0.2",
    "remark-gfm": "^3.0.1",
    "source-map-loader": "^4.0.0",
    "style-loader": "^3.3.1",
    "swc-loader": "^0.2.0",
    "tailwindcss": "^3.0.24",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "tsyringe": "^4.6.0",
    "typescript": "^4.6.2",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4"
  },
  "dependencies": {
    "@electron/remote": "^2.0.5",
    "@types/node": "^18.7.18",
    "@types/react": "^18.0.20",
    "@types/react-dom": "^18.0.6",
    "@types/react-infinite-scroller": "^1.2.3",
    "@types/react-intl": "^3.0.0",
    "@types/react-router": "^5.1.18",
    "@types/react-router-dom": "^5.3.3",
    "@types/sqlite3": "^3.1.8",
    "@types/winston": "^2.4.4",
    "async-lock": "^1.3.1",
    "electron-updater": "^5.2.1",
    "eslint": "^8.13.0",
    "eslint-plugin-react": "^7.29.3",
    "eslint-webpack-plugin": "^3.1.1",
    "fs-extra": "^10.1.0",
    "less": "^4.1.2",
    "less-loader": "^11.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.3",
    "supports-color": "^9.2.1",
    "winston": "^3.6.0",
    "winston-daily-rotate-file": "^4.6.1",
    "zip-a-folder": "^1.1.3"
  },
  "build": {
    "appId": "org.myddd.electron",
    "asar": true,
    "publish": [
      {
        "provider": "generic",
        "url": "https://myddd.org/"
      }
    ],
    "productName": "微言码道",
    "files": [
      "./dist/**/*",
      "./entry.js"
    ],
    "directories": {
      "output": "package"
    },
    "dmg": {
      "sign": false
    },
    "mac": {
      "icon": "dist/assets/icon.icns",
      "entitlements": "build/entitlements.mac.plist",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "extendInfo": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        },
        "NSMicrophoneUsageDescription": "为使用会议视频功能，请允许应用访问您的摄像头",
        "NSCameraUsageDescription": "为使用会议视频功能，请允许应用访问您的麦克风"
      }
    },
    "win": {
      "icon": "dist/assets/icon.png",
      "target": "nsis"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "menuCategory": true,
      "allowElevation": false,
      "createDesktopShortcut": true
    }
  }
}
